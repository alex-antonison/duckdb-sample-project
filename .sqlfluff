[sqlfluff]
dialect = duckdb
templater = jinja
exclude_rules = L016,L031,L034,RF05

[sqlfluff:rules]
tab_space_size = 4
max_line_length = 88
indent_unit = space
capitalisation_policy = lower
extended_capitalisation_policy = lower

[sqlfluff:rules:L010]
capitalisation_policy = lower

[sqlfluff:rules:L014]
extended_capitalisation_policy = lower
unquoted_identifiers_policy = all

[sqlfluff:rules:L030]
extended_capitalisation_policy = lower

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space

[sqlfluff:layout:type:comma]
line_position = trailing

[sqlfluff:templater:jinja]
apply_dbt_builtins = True
